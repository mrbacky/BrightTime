      </StackPane>
      <StackPane prefHeight="35.0" prefWidth="270.0" GridPane.rowIndex="1">
         <children>
            <JFXTextField fx:id="textFieldUserName" prefHeight="27.0" prefWidth="300.0" promptText="Username">
