            <Insets />
         </GridPane.margin>
         <padding>
            <Insets bottom="15.0" left="7.5" right="7.5" top="7.5" />
         </padding>
         <children>
            <JFXTextField fx:id="textFieldPassword" prefHeight="27.0" prefWidth="300.0" promptText="Password">
               <styleClass>
                  <String fx:value="txtCommon" />
                  <String fx:value="txtName" />
               </styleClass>
            </JFXTextField>
         </children>
      </StackPane>
      <StackPane prefHeight="50.0" prefWidth="41.0" GridPane.columnIndex="3" />
      <JFXButton fx:id="btnAdd" contentDisplay="GRAPHIC_ONLY" ellipsisString="" prefHeight="30.0" prefWidth="30.0" GridPane.columnIndex="4">
         <graphic>
            <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@assets/plus_48px.png" />
               </image>
            </ImageView>
         </graphic>
         <padding>
            <Insets right="10.0" top="5.0" />
