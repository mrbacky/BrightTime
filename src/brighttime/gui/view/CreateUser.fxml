                  <String fx:value="txtCommon" />
                  <String fx:value="txtName" />
               </styleClass>
            </JFXTextField>
         </children>
         <GridPane.margin>
            <Insets />
         </GridPane.margin>
         <padding>
            <Insets bottom="7.5" left="7.5" right="7.5" top="15.0" />
